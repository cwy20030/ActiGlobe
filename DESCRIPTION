Package: ActiGlobe
Type: Package
Title: Wearable Recording Processor for Cross-Continental Travel
Version: 0.2.0
Authors@R: c(
	person("C. William", "Yao", , email = "chun.william.yao.cnmtl@ssss.gouv.qc.ca", role = c("aut","cre","cph"), 
